---
import { type CollectionEntry } from 'astro:content';
import ArrowRight from '../assets/icons/arrow-right.svg';
import FormattedDate from './FormattedDate.astro';

type Props = { post: CollectionEntry<'prose'>; class?: string; headingLevel?: 'h2' | 'h3' };

const { post, class: className, headingLevel = 'h2' } = Astro.props;
const { title, publishDate, updatedDate, excerpt, agent } = post.data;
const TitleTag = headingLevel;
---

<a class:list={['group flex items-start justify-between gap-8', className]} href={`/prose/${post.id}/`}>
  <div class="grow">
    <TitleTag
      class="font-serif text-xl leading-tight italic group-hover:underline group-hover:decoration-dashed group-hover:decoration-1 group-hover:underline-offset-4 sm:text-2xl"
    >
      <q>{title}</q>
    </TitleTag>
    <div class="mt-1 text-sm leading-normal">
      {agent} â€”
      <FormattedDate date={publishDate} />
      {
        updatedDate && (
          <>
            {' '}
            <span>
              (Updated on <FormattedDate date={updatedDate} />)
            </span>
          </>
        )
      }
    </div>
    <!-- {excerpt && <div class="mt-3 text-sm leading-normal">{excerpt}</div>} -->
  </div>
  <div class="hidden font-serif italic opacity-0 transition group-hover:opacity-100 sm:inline-flex sm:shrink-0 sm:items-center sm:gap-1">
    Read Prose <ArrowRight class="h-4 w-4 fill-current" />
  </div>
</a>
